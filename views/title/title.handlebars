<div class="container-sm align-items-center mb-5" style="height: 100vh;">
    <div class="container">
        <div class="row">

            <div class="col-md-4">
                <img class="rounded-5" src="{{result.Poster}}" alt="{{result.Title}}">
            </div>

            <div class="col-md-8">

                <h2>{{result.Title}}</h2>

                <div class="d-flex">
                    <ul class="list-inline">
                        <li class="list-inline-item">{{result.Year}}</li>
                        <li class="list-inline-item">
                            <i class="bi bi-clock-history"> {{result.Runtime}}</i>
                        </li>
                        <li class="list-inline-item">{{result.imdbRating}}/10</li>
                    </ul>
                </div>

                <div class="d-flex">
                    <ul class="list-inline">
                        <li class="list-inline-item">Actors: {{result.Actors}}</i></li>
                    </ul>
                </div>
                <div class="d-flex">
                    <ul class="list-inline">
                        <li class="list-inline-item">Director: {{result.Director}}</i></li>
                        <li class="list-inline-item">Writer: {{result.Writer}}</li>
                    </ul>
                    
                </div>
                <div class="d-flex">
                    <ul class="list-inline">
                        <li class="list-inline item"><i class="bi bi-award"> {{result.Awards}}</i></li>
                    </ul>
                </div>
                <p>{{result.Plot}}</p>
            </div>
        </div>
    </div>
</div>